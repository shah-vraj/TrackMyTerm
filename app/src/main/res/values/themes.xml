<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TrackMyTerm" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TrackMyTerm" parent="Base.Theme.TrackMyTerm" />

    <!-- Base EditText -->
    <style name="base_edittext" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_base_edittext</item>
        <item name="android:textColorHint">@color/edittext_text_placeholder</item>
        <item name="android:textColor">@color/edittext_text</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:paddingVertical">@dimen/_15sdp</item>
        <item name="android:paddingHorizontal">@dimen/_25sdp</item>
        <item name="android:elevation">@dimen/_2sdp</item>
    </style>

    <!-- Base Button -->
    <style name="base_button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingVertical">@dimen/_15sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Default Button -->
    <style name="default_button" parent="base_button">
        <item name="android:background">@drawable/bg_base_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Stroke Button -->
    <style name="stroke_button" parent="base_button">
        <item name="android:background">@drawable/bg_stroke_button</item>
        <item name="android:textColor">@color/app_primary</item>
    </style>

    <!-- Text Button -->
    <style name="text_button" parent="base_button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/app_primary</item>
    </style>
</resources>